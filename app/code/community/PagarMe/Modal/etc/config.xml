<?xml version="1.0"?>
<config>
    <modules>
        <PagarMe_Modal>
            <version>3.20.1</version>
        </PagarMe_Modal>
    </modules>
    <global>
        <models>
            <pagarme_modal>
                <class>PagarMe_Modal_Model</class>
            </pagarme_modal>
        </models>
        <helpers>
            <pagarme_modal>
                <class>PagarMe_Modal_Helper</class>
            </pagarme_modal>
        </helpers>
        <blocks>
            <pagarme_modal>
                <class>PagarMe_Modal_Block</class>
            </pagarme_modal>
        </blocks>
        <sales>
            <quote>
                <totals>
                    <pagarme_modal_interest_fee>
                        <class>pagarme_core/quote_address_total_creditCardInterestAmount</class>
                        <after>subtotal,shipping</after>
                        <before>tax</before>
                    </pagarme_modal_interest_fee>
                    <pagarme_modal_discount>
                        <class>pagarme_core/quote_address_total_boletoDiscount</class>
                        <after>discount</after>
                        <before>tax,grand_total</before>
                    </pagarme_modal_discount>
                </totals>
            </quote>
        </sales>
    </global>
    <adminhtml>
        <layout>
            <updates>
                <pagarme_modal>
                    <file>pagarme/pagarme_modal.xml</file>
                </pagarme_modal>
            </updates>
        </layout>
        <translate>
            <modules>
                <PagarMe_Modal>
                    <files>
                        <default>PagarMe_Modal.csv</default>
                    </files>
                </PagarMe_Modal>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <layout>
            <updates>
                <pagarme_modal>
                    <file>pagarme/pagarme_modal.xml</file>
                </pagarme_modal>
            </updates>
        </layout>
        <translate>
            <modules>
                <PagarMe_Modal>
                    <files>
                        <default>PagarMe_Modal.csv</default>
                    </files>
                </PagarMe_Modal>
            </modules>
        </translate>
    </frontend>
    <default>
        <payment>
            <pagarme_modal>
                <active>1</active>
            </pagarme_modal>
        </payment>
    </default>
</config>
