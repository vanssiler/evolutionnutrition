<?php if ($this->getReviewsCount()): ?>
    <div class="ratings">
        <?php if ($this->getRatingSummary()):?>
            <?php $summary = $this->getRatingSummary();?>
            <div class="rating-box">
                <?php if ($summary > 19):?><i class="icon-star-full"></i><?php endif;?>
                <?php if ($summary > 39):?><i class="icon-star-full"></i><?php endif;?>
                <?php if ($summary > 59):?><i class="icon-star-full"></i><?php endif;?>
                <?php if ($summary > 79):?><i class="icon-star-full"></i><?php endif;?>
                <?php if ($summary > 99):?><i class="icon-star-full"></i><?php endif;?>

                <?php if ($summary < 20):?><i class="icon-star-empty"></i><?php endif;?>
                <?php if ($summary < 40):?><i class="icon-star-empty"></i><?php endif;?>
                <?php if ($summary < 60):?><i class="icon-star-empty"></i><?php endif;?>
                <?php if ($summary < 80):?><i class="icon-star-empty"></i><?php endif;?>
                <?php if ($summary < 100):?><i class="icon-star-empty"></i><?php endif;?>
            </div>
        <?php endif;?>
        <div class="rating-links">
            <a href="#customer-reviews"><?php echo $this->__('%d Review(s)', $this->getReviewsCount()) ?></a>
            <span class="separator">|</span>
            <a href="#customer-reviews"><?php echo $this->__('Add Your Review') ?></a>
        </div>
    </div>
<?php elseif ($this->getDisplayIfEmpty()): ?>
    <p class="no-rating"><a href="<?php echo $this->getReviewsUrl() ?>#review-form"><?php echo $this->__('Be the first to review this product') ?></a></p>
<?php endif; ?>
