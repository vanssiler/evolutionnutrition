<?php $_items = $this->getReviewsCollection()->getItems();?>
<div class="box-collateral box-reviews" id="customer-reviews">
    <h2><?php echo $this->__('Customer Reviews') ?></h2>
    <div class="row">
        <div class="col-sm-4"><?php echo $this->getChildHtml('review_form') ?></div>
        <div class="col-sm-8">
            <?php if (count($_items)):?>

                <div class="reviews-main-wrapper">
                    <h3 class="reviews-main-title"><?php echo $this->__('Last reviews') ?></h3>
                    <?php foreach ($_items as $_review):?>
                        <div class="review-wrapper">
                            <div class="review-by">
                                <strong><?php echo $this->__($this->escapeHtml($_review->getNickname())) ?></strong>
                                <small class="date"><?php echo $this->__('(Posted on %s)', $this->formatDate($_review->getCreatedAt()), 'long') ?></small>
                            </div>
                            <div class="user-review">
                                <div class="review-stars">
                                    <?php $_votes = $_review->getRatingVotes(); ?>
                                    <?php if (count($_votes)): ?>
                                        <ol>
                                            <?php foreach ($_votes as $_vote): ?>
                                                <ul>
                                                    <li><strong><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></strong></li>
                                                    <li>
                                                        <div class="rating-box">
                                                            <?php $summary = $_vote->getPercent();?>
                                                            <?php if ($summary > 19):?><i class="icon-star-full"></i><?php endif;?>
                                                            <?php if ($summary > 39):?><i class="icon-star-full"></i><?php endif;?>
                                                            <?php if ($summary > 59):?><i class="icon-star-full"></i><?php endif;?>
                                                            <?php if ($summary > 79):?><i class="icon-star-full"></i><?php endif;?>
                                                            <?php if ($summary > 99):?><i class="icon-star-full"></i><?php endif;?>

                                                            <?php if ($summary < 20):?><i class="icon-star-empty"></i><?php endif;?>
                                                            <?php if ($summary < 40):?><i class="icon-star-empty"></i><?php endif;?>
                                                            <?php if ($summary < 60):?><i class="icon-star-empty"></i><?php endif;?>
                                                            <?php if ($summary < 80):?><i class="icon-star-empty"></i><?php endif;?>
                                                            <?php if ($summary < 100):?><i class="icon-star-empty"></i><?php endif;?>
                                                        </div>
                                                    </li>
                                                </ul>
                                            <?php endforeach; ?>
                                        </ol>
                                    <?php endif; ?>
                                </div>
                                <div class="review-title">
                                    <strong><?php echo $this->__('Review Title') ?> </strong><span><?php echo $this->escapeHtml($_review->getTitle()) ?></span>
                                </div>
                                <div class="review-details">
                                    <?php echo nl2br($this->escapeHtml($_review->getDetail())) ?>
                                </div>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            <?php endif;?>
        </div>
    </div>
</div>
